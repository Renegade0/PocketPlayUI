	characterPauseToggles = { 
	--{'CENTER_MEMBER_LABEL',24434, 37, 0, 0},
	{'CHARACTER_HIT_LABEL',18032, 1 , 0, 0},
	{'CHARACTER_INJURED_LABEL',18033, 2 , 0, 0},

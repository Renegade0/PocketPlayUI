function rgGetClassLevelString(num)
	--dual 19719
	local rgClass = ''
	local rgLevel = ''
	local rgLevelXP = ''
	if num == 1 then 
		rgClass = ',' .. characters[currentID].classlevel.first.details
		rgLevel = string.match(characters[currentID].classlevel.first.details, '%d.')

function rgAddAutoPauseToggles()
	autoPauseToggles = { 
	{'WEAPON_UNUSABLE_LABEL',18036, 5 , 0, 0},
	{'END_OF_ROUND_LABEL',10640, 25, 0, 0},
	{'ENEMY_SIGHTED_LABEL',23514, 26, 0, 0},

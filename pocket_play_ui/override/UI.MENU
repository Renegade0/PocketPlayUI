function rgFirstLetterUpper(instr)
    if string.find(instr, "^%l") then
        instr = string.upper(string.sub(instr, 1, 1)) .. string.sub(instr, 2)
    end
    return instr
end
function rgFetchMageClassString(class)
    if rgGetClassName(class) == rgFirstLetterUpper(rgGetGameEngineString(1081,1081,1081,1081))  or 
		rgGetClassName(class) == rgGetGameEngineString(12837,12837,12837,12837) or 
		rgGetClassName(class) == rgGetGameEngineString(31977,31977,74302,37252) or 
		rgGetClassName(class) == rgGetGameEngineString(32342,32342,103061,40880) then
		return true
	else
		return false
	end
end
